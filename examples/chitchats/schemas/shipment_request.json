{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chit Chats Shipment Request",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Recipient name"
    },
    "address_1": {
      "type": "string",
      "description": "Recipient address line 1"
    },
    "address_2": {
      "type": ["string", "null"],
      "description": "Recipient address line 2"
    },
    "city": {
      "type": "string",
      "description": "Recipient city"
    },
    "province_code": {
      "type": "string",
      "description": "Recipient state/province code"
    },
    "postal_code": {
      "type": "string",
      "description": "Recipient postal/zip code"
    },
    "country_code": {
      "type": "string",
      "description": "Recipient country code (ISO 2-letter)"
    },
    "phone": {
      "type": ["string", "null"],
      "description": "Recipient phone number"
    },
    "email": {
      "type": ["string", "null"],
      "description": "Recipient email address"
    },
    "return_name": {
      "type": ["string", "null"],
      "description": "Return address name"
    },
    "return_address_1": {
      "type": ["string", "null"],
      "description": "Return address line 1"
    },
    "return_address_2": {
      "type": ["string", "null"],
      "description": "Return address line 2"
    },
    "return_city": {
      "type": ["string", "null"],
      "description": "Return address city"
    },
    "return_province_code": {
      "type": ["string", "null"],
      "description": "Return address state/province code"
    },
    "return_postal_code": {
      "type": ["string", "null"],
      "description": "Return address postal/zip code"
    },
    "return_country_code": {
      "type": ["string", "null"],
      "description": "Return address country code (ISO 2-letter)"
    },
    "return_phone": {
      "type": ["string", "null"],
      "description": "Return address phone number"
    },
    "package_contents": {
      "type": "string",
      "enum": ["merchandise", "documents", "gift", "returned_goods", "sample"],
      "description": "Contents of the package"
    },
    "description": {
      "type": "string",
      "description": "Description of the package contents"
    },
    "value": {
      "type": "string",
      "description": "Value of the package contents"
    },
    "value_currency": {
      "type": "string",
      "description": "Currency code for the value"
    },
    "order_id": {
      "type": ["string", "null"],
      "description": "External order ID"
    },
    "order_store": {
      "type": ["string", "null"],
      "description": "Store name for the order"
    },
    "package_type": {
      "type": "string",
      "enum": ["envelope", "thick_envelope", "parcel"],
      "description": "Type of package"
    },
    "weight": {
      "type": "number",
      "description": "Weight of the package"
    },
    "weight_unit": {
      "type": "string",
      "enum": ["g", "oz", "kg", "lb"],
      "description": "Unit of weight measurement"
    },
    "size_x": {
      "type": "number",
      "description": "Length/X dimension of the package"
    },
    "size_y": {
      "type": "number",
      "description": "Width/Y dimension of the package"
    },
    "size_z": {
      "type": "number",
      "description": "Height/Z dimension of the package"
    },
    "size_unit": {
      "type": "string",
      "enum": ["cm", "in", "mm"],
      "description": "Unit of dimension measurement"
    },
    "is_insurance_requested": {
      "type": "boolean",
      "description": "Whether insurance is requested"
    },
    "is_signature_requested": {
      "type": "boolean",
      "description": "Whether signature is requested"
    },
    "postage_type": {
      "type": "string",
      "description": "The postage type to use for the shipment"
    },
    "ship_date": {
      "type": "string",
      "description": "Date the shipment is expected to be shipped (YYYY-MM-DD or 'today')"
    },
    "line_items": {
      "type": "array",
      "description": "Line items for customs declaration",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of the item"
          },
          "quantity": {
            "type": "integer",
            "description": "Quantity of the item"
          },
          "value": {
            "type": "number",
            "description": "Value of the item"
          },
          "weight": {
            "type": "number",
            "description": "Weight of the item"
          },
          "weight_unit": {
            "type": "string",
            "enum": ["g", "oz", "kg", "lb"],
            "description": "Unit of weight measurement for the item"
          },
          "hs_tariff_code": {
            "type": ["string", "null"],
            "description": "HS tariff code for the item"
          },
          "origin_country": {
            "type": "string",
            "description": "Country of origin for the item (ISO 2-letter)"
          }
        },
        "required": ["description", "quantity", "value"]
      }
    }
  },
  "required": [
    "name",
    "address_1",
    "city",
    "province_code",
    "postal_code",
    "country_code",
    "package_type",
    "weight",
    "weight_unit",
    "size_x",
    "size_y",
    "size_z",
    "size_unit",
    "description",
    "value",
    "value_currency"
  ]
} 