            "description": "Federal tax label"
          },
          "postage_fee": {
            "type": "string",
            "description": "Postage fee"
          },
          "insurance_fee": {
            "type": ["string", "null"],
            "description": "Insurance fee"
          },
          "delivery_fee": {
            "type": ["string", "null"],
            "description": "Delivery fee"
          },
          "payment_amount": {
            "type": "string",
            "description": "Total payment amount"
          },
          "currency": {
            "type": "string",
            "description": "Currency code"
          }
        },
        "required": ["postage_type", "postage_description", "postage_fee"]
      }
