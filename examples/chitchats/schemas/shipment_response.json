{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chit Chats Shipment Response",
  "type": "object",
  "properties": {
    "shipment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the shipment"
        },
        "status": {
          "type": "string",
          "enum": ["incomplete", "unpaid", "ready", "received", "transit", "delivered"],
          "description": "Current status of the shipment"
        },
        "batch_id": {
          "type": ["string", "null"],
          "description": "Batch ID if the shipment is part of a batch"
        },
        "to_name": {
          "type": "string",
          "description": "Recipient name"
        },
        "to_address_1": {
          "type": "string",
          "description": "Recipient address line 1"
        },
        "to_address_2": {
          "type": ["string", "null"],
          "description": "Recipient address line 2"
        },
        "to_city": {
          "type": "string",
          "description": "Recipient city"
        },
        "to_province_code": {
          "type": "string",
          "description": "Recipient state/province code"
        },
        "to_postal_code": {
          "type": "string",
          "description": "Recipient postal/zip code"
        },
        "to_country_code": {
          "type": "string",
          "description": "Recipient country code (ISO 2-letter)"
        },
        "to_phone": {
          "type": ["string", "null"],
          "description": "Recipient phone number"
        },
        "to_email": {
          "type": ["string", "null"],
          "description": "Recipient email address"
        },
        "return_name": {
          "type": ["string", "null"],
          "description": "Return address name"
        },
        "return_address_1": {
          "type": ["string", "null"],
          "description": "Return address line 1"
        },
        "return_address_2": {
          "type": ["string", "null"],
          "description": "Return address line 2"
        },
        "return_city": {
          "type": ["string", "null"],
          "description": "Return address city"
        },
        "return_province_code": {
          "type": ["string", "null"],
          "description": "Return address state/province code"
        },
        "return_postal_code": {
          "type": ["string", "null"],
          "description": "Return address postal/zip code"
        },
        "return_country_code": {
          "type": ["string", "null"],
          "description": "Return address country code (ISO 2-letter)"
        },
        "return_phone": {
          "type": ["string", "null"],
          "description": "Return address phone number"
        },
        "is_return_dispose": {
          "type": "boolean",
          "description": "Whether to dispose of the item if it's returned"
        },
        "package_contents": {
          "type": "string",
          "description": "Contents of the package"
        },
        "description": {
          "type": "string",
          "description": "Description of the package contents"
        },
        "value": {
          "type": "string",
          "description": "Value of the package contents"
        },
        "value_currency": {
          "type": "string",
          "description": "Currency code for the value"
        },
        "order_id": {
          "type": ["string", "null"],
          "description": "External order ID"
        },
        "order_store": {
          "type": ["string", "null"],
          "description": "Store name for the order"
        },
        "package_type": {
          "type": "string",
          "description": "Type of package"
        },
        "size_unit": {
          "type": "string",
          "description": "Unit of dimension measurement"
        },
        "size_x": {
          "type": "number",
          "description": "Length/X dimension of the package"
        },
        "size_y": {
          "type": "number",
          "description": "Width/Y dimension of the package"
        },
        "size_z": {
          "type": "number",
          "description": "Height/Z dimension of the package"
        },
        "weight_unit": {
          "type": "string",
          "description": "Unit of weight measurement"
        },
        "weight": {
          "type": "number",
          "description": "Weight of the package"
        },
        "is_insured": {
          "type": "boolean",
          "description": "Whether the shipment is insured"
        },
        "is_insurance_requested": {
          "type": "boolean",
          "description": "Whether insurance was requested"
        },
        "is_media_mail_requested": {
          "type": "boolean",
          "description": "Whether media mail was requested"
        },
        "is_signature_requested": {
          "type": "boolean",
          "description": "Whether signature was requested"
        },
        "is_delivery_duties_paid_requested": {
          "type": "boolean",
          "description": "Whether delivery duties paid was requested"
        },
        "postage_type": {
          "type": "string",
          "description": "The postage type used for the shipment"
        },
        "carrier": {
          "type": "string",
          "description": "The carrier used"
        },
        "carrier_tracking_code": {
          "type": ["string", "null"],
          "description": "The carrier's tracking code"
        },
        "tracking_url": {
          "type": "string",
          "description": "URL to track the shipment"
        },
        "ship_date": {
          "type": ["string", "null"],
          "description": "Date the shipment is expected to be shipped (YYYY-MM-DD)"
        },
        "purchase_amount": {
          "type": ["string", "null"],
          "description": "Total purchase amount for the shipment"
        },
        "provincial_tax": {
          "type": ["string", "null"],
          "description": "Provincial tax amount"
        },
        "provincial_tax_label": {
          "type": ["string", "null"],
          "description": "Provincial tax label"
        },
        "federal_tax": {
          "type": ["string", "null"],
          "description": "Federal tax amount"
        },
        "federal_tax_label": {
          "type": ["string", "null"],
          "description": "Federal tax label"
        },
        "postage_fee": {
          "type": ["string", "null"],
          "description": "Postage fee"
        },
        "insurance_fee": {
          "type": ["string", "null"],
          "description": "Insurance fee"
        },
        "delivery_fee": {
          "type": ["string", "null"],
          "description": "Delivery fee"
        },
        "created_at": {
          "type": "string",
          "description": "Creation date and time (ISO 8601)"
        },
        "postage_label_png_url": {
          "type": ["string", "null"],
          "description": "URL to download the shipping label as PNG"
        },
        "postage_label_zpl_url": {
          "type": ["string", "null"],
          "description": "URL to download the shipping label as ZPL"
        },
        "rates": {
          "type": "array",
          "description": "Available rates for the shipment",
          "items": {
            "type": "object",
            "properties": {
              "postage_type": {
                "type": "string",
                "description": "Type of postage"
              },
              "postage_carrier_type": {
                "type": "string",
                "description": "Carrier type for the postage"
              },
              "postage_description": {
                "type": "string",
                "description": "Description of the postage type"
              },
              "signature_confirmation_description": {
                "type": ["string", "null"],
                "description": "Description of signature confirmation"
              },
              "delivery_duties_paid_description": {
                "type": ["string", "null"],
                "description": "Description of delivery duties paid"
              },
              "delivery_time_description": {
                "type": "string",
                "description": "Description of estimated delivery time"
              },
              "tracking_type_description": {
                "type": "string",
                "description": "Description of tracking type"
              },
              "is_insured": {
                "type": "boolean",
                "description": "Whether the rate includes insurance"
              },
              "purchase_amount": {
                "type": "string",
                "description": "Purchase amount for the rate"
              },
              "provincial_tax": {
                "type": ["string", "null"],
                "description": "Provincial tax amount"
              },
              "provincial_tax_label": {
                "type": ["string", "null"],
                "description": "Provincial tax label"
              },
              "federal_tax": {
                "type": "string",
                "description": "Federal tax amount"
              },
              "federal_tax_label": {
                "type": "string",
                "description": "Federal tax label"
              },
              "postage_fee": {
                "type": "string",
                "description": "Postage fee"
              },
              "insurance_fee": {
                "type": ["string", "null"],
                "description": "Insurance fee"
              },
              "delivery_fee": {
                "type": ["string", "null"],
                "description": "Delivery fee"
              },
              "payment_amount": {
                "type": "string",
                "description": "Total payment amount"
              },
              "currency": {
                "type": "string",
                "description": "Currency code"
              }
            }
          }
        },
        "tracking_events": {
          "type": "array",
          "description": "Events in the shipment tracking history",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "Type of tracking event"
              },
              "title": {
                "type": "string",
                "description": "Title of the tracking event"
              },
              "subtitle": {
                "type": ["string", "null"],
                "description": "Subtitle of the tracking event"
              },
              "location_description": {
                "type": ["string", "null"],
                "description": "Location description for the tracking event"
              },
              "created_at": {
                "type": "string",
                "description": "Date and time of the tracking event (ISO 8601)"
              },
              "status": {
                "type": ["string", "null"],
                "description": "Status of the tracking event"
              }
            }
          }
        }
      },
      "required": [
        "id",
        "status",
        "to_name",
        "to_address_1",
        "to_city",
        "to_province_code",
        "to_postal_code",
        "to_country_code",
        "tracking_url",
        "created_at"
      ]
    }
  },
  "required": [
    "shipment"
  ]
} 