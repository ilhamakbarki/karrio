{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chit Chats Batch Response",
  "type": "object",
  "properties": {
    "batch": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the batch"
        },
        "status": {
          "type": "string",
          "enum": ["open", "closed", "processed"],
          "description": "Current status of the batch"
        },
        "description": {
          "type": "string",
          "description": "Description of the batch"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Notes for the batch"
        },
        "created_at": {
          "type": "string",
          "description": "Creation date and time (ISO 8601)"
        },
        "updated_at": {
          "type": "string",
          "description": "Last update date and time (ISO 8601)"
        },
        "closed_at": {
          "type": ["string", "null"],
          "description": "Date and time when the batch was closed (ISO 8601)"
        },
        "processed_at": {
          "type": ["string", "null"],
          "description": "Date and time when the batch was processed (ISO 8601)"
        },
        "shipment_count": {
          "type": "integer",
          "description": "Number of shipments in the batch"
        },
        "tracking_url": {
          "type": "string",
          "description": "URL to track the batch"
        },
        "label_png_url": {
          "type": ["string", "null"],
          "description": "URL to download the batch label as PNG"
        },
        "label_zpl_url": {
          "type": ["string", "null"],
          "description": "URL to download the batch label as ZPL"
        },
        "shipments": {
          "type": "array",
          "description": "List of shipments in the batch",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the shipment"
              },
              "status": {
                "type": "string",
                "description": "Current status of the shipment"
              },
              "to_name": {
                "type": "string",
                "description": "Recipient name"
              },
              "to_address_1": {
                "type": "string",
                "description": "Recipient address line 1"
              },
              "to_city": {
                "type": "string",
                "description": "Recipient city"
              },
              "to_province_code": {
                "type": "string",
                "description": "Recipient state/province code"
              },
              "to_postal_code": {
                "type": "string",
                "description": "Recipient postal/zip code"
              },
              "to_country_code": {
                "type": "string",
                "description": "Recipient country code (ISO 2-letter)"
              },
              "tracking_url": {
                "type": "string",
                "description": "URL to track the shipment"
              }
            }
          }
        }
      },
      "required": [
        "id",
        "status",
        "description",
        "created_at",
        "tracking_url"
      ]
    }
  },
  "required": [
    "batch"
  ]
} 